{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*.ts",
    "src/common/popup/AddExpensePopup.tsx",
    "src/pages/auth/components/CompoundAuthForm.tsx",
    "src/common/hoc/AuthHoc.tsx"
  ],
  "baseUrl": "./",
  "paths": {
    "src/*": ["./src/*"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
