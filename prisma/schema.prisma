generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Expenditures{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user String 
  category String
  amount Int
  expenseBudget Int
  remainingExpense Int
  createdAt DateTime @default(now())
}



model MonthlyPlan{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user String 
  income Int
  savings Int
  investment Int
  expenseBudget Int
  remainingExpense Int
  categories String[]
  createdAt DateTime @default(now())
  active Boolean @default(true)
}

model Reminder{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user String @unique
  expenseBudgetThreshold Int
  loanReminder Json
}